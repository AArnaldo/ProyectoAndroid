<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsuarioActivity">

    <TextView
        android:id="@+id/textView3"
        style="@style/ViewFieldName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Direccion"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/tvUsuario_Telefono" />

    <TextView
        android:id="@+id/tvUsuario_Direccion"
        style="@style/ViewFieldValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:text="direccion"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        style="@style/ViewFieldName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Telefono"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUsuario_Correo" />

    <TextView
        android:id="@+id/tvUsuario_Telefono"
        style="@style/ViewFieldValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:text="948-846-887"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:text="948-846-887" />

    <ImageView
        android:id="@+id/iv_usuario_foto"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_person_black_24dp"
        android:transitionName="usuariopicture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibtn_usuario_galeria"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/button_rounded"
        android:src="@drawable/ic_folder_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_usuario_foto"
        app:layout_constraintStart_toStartOf="@+id/iv_usuario_foto" />

    <TextView
        android:id="@+id/textView2"
        style="@style/ViewFieldName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_usuario_foto" />

    <TextView
        android:id="@+id/textView4"
        style="@style/ViewFieldName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Correo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUsuario_Nombre" />

    <TextView
        android:id="@+id/tvUsuario_Nombre"
        style="@style/ViewFieldValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:text="Esteban Ramirez"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:text="Esteban Ramirez" />

    <TextView
        android:id="@+id/tvUsuario_Correo"
        style="@style/ViewFieldValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:text="esteban.ramirez@cibertec.com"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:text="esteban.ramirez@cibertec.com" />

    <ImageButton
        android:id="@+id/ibtn_usuario_foto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/button_rounded"
        app:layout_constraintBottom_toBottomOf="@+id/iv_usuario_foto"
        app:layout_constraintEnd_toEndOf="@+id/iv_usuario_foto"
        android:src="@drawable/ic_photo_camera_black_24dp" />

    <ImageButton
        android:id="@+id/btnGrabarUsuario"
        android:layout_width="60dp"
        android:layout_height="39dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="#ff004164"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:src="@drawable/ic_save_black_24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>